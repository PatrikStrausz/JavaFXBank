<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="270.0" prefWidth="250.0" GridPane.rowIndex="1">
         <children>
            <Button fx:id="btnLogin" layoutX="27.0" layoutY="176.0" mnemonicParsing="false" onAction="#login" prefHeight="25.0" prefWidth="198.0" text="Log in" />
            <PasswordField fx:id="password" layoutX="27.0" layoutY="133.0" onKeyReleased="#handleKeyReleased" prefWidth="198.0" />
            <Label layoutX="27.0" layoutY="118.0" text="Password:" />
            <Label layoutX="27.0" layoutY="68.0" text="Login:" />
            <TextField fx:id="login" layoutX="27.0" layoutY="84.0" onKeyReleased="#handleKeyReleased" prefWidth="198.0" />
            <Label layoutX="60.0" layoutY="15.0" text="Member login">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font></Label>
            <Label fx:id="lblError" alignment="CENTER" contentDisplay="CENTER" layoutX="27" layoutY="45.0" prefHeight="25.0" prefWidth="200" textFill="#f50b0b" visible="false">
               <font>
                  <Font size="15.0" />
               </font></Label>
            <Label layoutX="121.0" layoutY="203.0" text="or" />
            <Button fx:id="btnSignup" layoutX="27.0" layoutY="223.0" mnemonicParsing="false" onAction="#openSignup" prefHeight="25.0" prefWidth="198.0" text="Sign up" />
         </children>
      </Pane>
   </children>
</GridPane>
